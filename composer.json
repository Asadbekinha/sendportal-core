{
    "name": "sendportal/base",
    "homepage": "https://github.com/sendportal/base",
    "license": "MIT",
    "type": "library",
    "authors": [],
    "require": {
        "php": "^7.3",
        "illuminate/support": "^7.0",
        "laravel/ui": "^2.0",
        "jonob/buzz": "dev-master"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Sendportal\\Base\\": "src"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/JonoB/Buzz"
        }
    ],
    "autoload-dev": {
        "psr-4": {
            "Sendportal\\Base\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sendportal\\Base\\SendportalBaseServiceProvider"
            ]
        }
    }
}
